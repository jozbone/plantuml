''
'' A simple black on white theme (with blue hyperlinks)
''
'' Original Author: Matthew Leather
''

!$THEME = "plainblue"

!$BGCOLOR = "#E3E3E3"
!$BORDER = "#33668E"
!$SECONDARY_LIGHT = "#0070C0"
!$SECONDARY_DARK = navy
!$SECONDARY_TEXT = "#FFFFFF"

!if %not(%variable_exists("$BGCOLOR"))
  !$BGCOLOR = "white"
!endif

!if %not(%variable_exists("$FGCOLOR"))
  !$FGCOLOR = "#000000"
!endif

!if %not(%variable_exists("$HYPERLINK_COLOR"))
  !$HYPERLINK_COLOR = "blue"
!endif

!ifndef $FONT_NAME
  !$FONT_NAME = "Verdana"
!endif

!ifndef $FONT_NAME_MONOSPACED
  !$FONT_NAME_MONOSPACED = "Courier"
!endif

<style>
  root {
    BackgroundColor $BGCOLOR
    FontColor $FGCOLOR
    FontName $FONT_NAME
    HyperLinkColor $HYPERLINK_COLOR
    LineColor $FGCOLOR
    LineThickness 1
    Margin 5
  }
  caption {
    LineThickness 0
  }
  footer {
    LineThickness 0
  }
  header {
    LineThickness 0
  }
  node {
    MaximumWidth 300
  }
  title {
    FontSize 22
    LineThickness 0
  }

  ' activityDiagram {
  ' BackgroundColor #E3E3E3
  ' BorderColor #33668E
  ' FontColor #000000
  ' FontName arial

  ' diamond {
  '   BackgroundColor #0070C0
  '   LineColor navy
  '   FontColor #FFFFFF
  '   ' FontName arial
  '   FontSize 12
  ' }
  arrow {
    FontSize 12
  }
  partition {
    LineColor red
    FontColor green
    RoundCorner 10
    BackgroundColor PeachPuff
  }
  note {
    FontColor Blue
    LineColor Navy
    BackgroundColor #ccf
  }
}
document {
   BackgroundColor transparent
}
</style>

skinparam ArrowLollipopColor $FGCOLOR
skinparam BackgroundColor $BGCOLOR
skinparam DefaultFontName $FONT_NAME
skinparam DefaultMonospacedFontName $FONT_NAME_MONOSPACED
skinparam LifelineStrategy nosolid
skinparam ParticipantPadding 10
skinparam SequenceLifeLineBorderColor $FGCOLOR
skinparam Shadowing false
skinparam UseBetaStyle true

!startsub activity
skinparam Activity {
  BackgroundColor $BGCOLOR
  BarColor $FGCOLOR
  BorderColor $FGCOLOR
  FontColor $FGCOLOR
  FontName $FONT_NAME

  DiamondBackgroundColor $SECONDARY_LIGHT
  DiamondBorderColor $SECONDARY_DARK
  DiamondFontColor $SECONDARY_TEXT
}
!endsub

skinparam Boundary {
  FontColor $FGCOLOR
}
skinparam Box {
